<configuration>
    <property name="LOG_PATH" value="logs"/>

    <!-- Appender principal com rotação por dia + por tamanho -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/app.log</file>

        <!-- Política híbrida: diária + tamanho -->
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <!-- Exemplo de saída:
                 logs/app.2025-11-23.0.log.gz
                 logs/app.2025-11-23.1.log.gz
            -->
            <fileNamePattern>${LOG_PATH}/app.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>

            <!-- Manter somente 7 dias -->
            <maxHistory>7</maxHistory>

            <!-- Limite total do diretório de logs -->
            <totalSizeCap>50MB</totalSizeCap>

            <!-- Limite por arquivo: 2MB -->
            <maxFileSize>2MB</maxFileSize>
        </rollingPolicy>

        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Console: apenas INFO+ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root em INFO -->
    <root level="INFO">
        <appender-ref ref="FILE" />
        <appender-ref ref="CONSOLE" />
    </root>

    <logger name="org.springframework.web" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>
</configuration>